<h1>Burger</h1>
<h3>Enter a burger you want to eat.</h3>
<form action="/" method="POST">
	<textarea type="text" name="burger"></textarea>

	<button type="submit">Submit</button>
</form>
<h2>To Eat</h2>
<ul>
  {{#each burgers}}
  {{#unless this.devoured}}
  	<li>
  	   <p> {{this.burger_name}} <button class="devour" id= {{this.id}}>Devour it</button></p>

  	</li>
      {{/unless}}
  {{/each}}
</ul>
<h2>Devoured</h2>
<ul>
  {{#each burgers}}
  {{#if this.devoured}}
  	<li class ="ingredients">
  	   <p> {{this.burger_name}}</p>

  	</li>
      {{/if}}
  {{/each}}
</ul>

